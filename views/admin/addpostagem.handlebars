{{#each erros}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<h3>Nova Postagem:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo: </label>
            <input type="text" id="titulo" name="titulo" class="form-control">
            <label for="slug">Slug:</label>
            <input type="text" id="slug" name="slug" class="form-control">
            <label for="descrisao">Descrisão:</label>
            <input type="text" id="descrisao" name="descrisao" class="form-control">
            <label for="conteudo">Conteúdo:</label>
            <textarea type="text" id="conteudo" name="conteudo" class="form-control" style="height: 300px;"></textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="form-select">
                <option selected value="0">Selecione uma categoria</option>
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button type="submit" class="btn btn-success">Criar postagem</button>
        </form>
    </div>
</div>